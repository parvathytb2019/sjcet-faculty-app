<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">
    <TextView
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="221dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sjcetlogo" />
    </LinearLayout>
    <TextView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="DEPARTMENTS"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:gravity="center_horizontal" />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Computer Science and Engineering"
            android:textColor="#302C2C"
            app:backgroundTint="#92EFEBEB" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Civil Engineering"
            android:textColor="#302C2C"
            app:backgroundTint="#92EFEBEB" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electronics and Communication Engineering"
            android:textColor="#302C2C"
            app:backgroundTint="#92EFEBEB" />
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electronics and Instrumentation Engineering"
            android:textColor="#302C2C"
            app:backgroundTint="#92EFEBEB" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electrical and Electronics Engineering"
            android:textColor="#302C2C"
            app:backgroundTint="#92EFEBEB" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mechanical Engineering"
            android:textColor="#302C2C"
            app:backgroundTint="#92EFEBEB" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Master of Computer Applications"
            android:textColor="#302C2C"
            app:backgroundTint="#92EFEBEB" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Master of Business Administration"
            android:textColor="#302C2C"
            app:backgroundTint="#92EFEBEB" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Science and Humanities"
            android:textColor="#302C2C"
            app:backgroundTint="#92EFEBEB" />

    </LinearLayout>
    </ScrollView>


</LinearLayout>
